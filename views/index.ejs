<%- include('./fragments/header.ejs') %>
    <main>
        <h2>Strona główna</h2>
        <% if(!loggedUser) { %>
            <div>
                <form class="form" method="post" action="/login" novalidate>

                    <label for="loginEmail">Email:</label>
                    <input type="email" id="loginEmail" name="email">
                    <span></span>
        
                    <label for="loginPassword">Hasło:</label>
                    <input type="password" id="loginPassword" name="password">
                    <span></span>
                    
                    <div class="form-buttons">
                        <input type="submit" value="Zaloguj się" class="form-button-submit">
                        <a href="/register" class="form-button-edit">Zarejestruj użytkownika</a>
                        <p id="errorsSummary" class="errors-text"><%= loginError ? loginError : ''%></p>
                    </div>
                </form>
            </div>
        <% } else { %>
            <form class="form">
                <label for="loginEmail">Jesteś zalogowany jako:</label>
                <input type="text" id="loginEmail" name="email" value="<%=loggedUser.firstName + " " + loggedUser.lastName%>" disabled>
                <div class="form-buttons">
                    <a href="/logout" class="form-button-cancel">Wyloguj się</a>
                </div>
            </form>
        <% } %>
    </main>
<%- include('./fragments/footer.ejs') %>